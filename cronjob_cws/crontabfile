55 19 * * 4 . /app/cron.env && cd /app && /usr/local/bin/poetry run python3 cws_reminder.py >> /var/log/cron.log 2>&1
55 02 * * 6 . /app/cron.env && cd /app && /usr/local/bin/poetry run python3 cws_reminder.py >> /var/log/cron.log 2>&1
55 00 * * 0 . /app/cron.env && cd /app && /usr/local/bin/poetry run python3 cws_reminder.py >> /var/log/cron.log 2>&1
55 17 * * 0 . /app/cron.env && cd /app && /usr/local/bin/poetry run python3 cws_reminder.py >> /var/log/cron.log 2>&1

# Crew wars Wins check in (UTC)
55 22 1 * *  . /app/cron.env && cd /app && /usr/local/bin/poetry run python3 wins_tracker.py >> /var/log/cron.log 2>&1
