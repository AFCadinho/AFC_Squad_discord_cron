# Discord Bot Settings
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_guild_id_here

# Role IDs
CWS_PING_ROLE=role_id_here
PVP_ROLE=role_id_here
NEW_RECRUIT_ROLE=role_id_here
CREW_MEMBER_ROLE=role_id_here

# Discord Channel or Message ID
APP_TRANSCRIPT_ID=channel_or_message_id_here

# PostgreSQL full URI for pg_dump
PG_DUMP_URI=postgresql://username:password@hostname:5432/dbname

# SQLAlchemy-compatible URI for the app
DATABASE_URL=postgresql+psycopg2://username:password@hostname:5432/dbname

# Individual DB components (optional, if not using full URI)
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=your_db_name
